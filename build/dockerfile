# syntax=docker/dockerfile:1.7-labs

# 1) Base để tải module
FROM golang:1.25 AS base
WORKDIR /src
COPY go.mod go.sum ./
RUN go version
RUN go mod download

# 2) Builder: build nhị phân
FROM base AS builder
WORKDIR /src
COPY . .
# Dùng cache cho build cache và gomod cache (không cần COPY từ deps)
RUN --mount=type=cache,target=/root/.cache/go-build \
    --mount=type=cache,target=/go/pkg/mod \
    CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/app ./cmd/server

# 3) Final: distroless nonroot
FROM gcr.io/distroless/static:nonroot AS final
WORKDIR /app
COPY --from=builder /out/app /app/app
USER nonroot:nonroot
EXPOSE 8080
ENTRYPOINT ["/app/app"]
