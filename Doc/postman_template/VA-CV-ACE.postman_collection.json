{
  "info": {
    "name": "VA-CV-ACE — Devices API",
    "_postman_id": "f3b9d5f1-ace0-4cf5-9a0a-demo-1756567176",
    "description": "Postman collection to exercise Devices domain endpoints (health, CRUD, plan attach/detach).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Liveness - /healthz",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}:{{port}}/healthz",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "healthz"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Readiness - /readiness",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}:{{port}}/readiness",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "readiness"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200 or 503', function () {",
                  "  pm.expect([200,503]).to.include(pm.response.code);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Devices",
      "item": [
        {
          "name": "Create Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serial_number\": \"{{serialNumber}}\",\n  \"name\": \"{{deviceName}}\",\n  \"model\": \"{{deviceModel}}\",\n  \"manufacturer\": \"Komatsu\",\n  \"year\": 2024,\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}:{{port}}/api/devices",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "devices"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created 201', function () { pm.response.to.have.status(201); });",
                  "var json = pm.response.json();",
                  "pm.test('Has id', function () { pm.expect(json.id).to.be.a('number'); });",
                  "pm.environment.set('deviceId', json.id);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Device by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}:{{port}}/api/devices/{{deviceId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "devices",
                "{{deviceId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('OK 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Devices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}:{{port}}/api/devices?limit=50&offset=0",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "devices"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('OK 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update Basic",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{deviceName}} — updated\",\n  \"status\": \"active\",\n  \"location\": \"Pit A\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}:{{port}}/api/devices/{{deviceId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "devices",
                "{{deviceId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('OK 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Attach Plan (optional)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan_id\": \"{{planId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}:{{port}}/api/devices/{{deviceId}}/plan",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "devices",
                "{{deviceId}}",
                "plan"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('OK 200 or 400 (if plan missing)', function () {",
                  "  pm.expect([200,400,404]).to.include(pm.response.code);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Detach Plan",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan_id\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}:{{port}}/api/devices/{{deviceId}}/plan",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "devices",
                "{{deviceId}}",
                "plan"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('OK 200', function () {",
                  "  pm.expect([200,400]).to.include(pm.response.code);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Soft Delete",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}:{{port}}/api/devices/{{deviceId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "devices",
                "{{deviceId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('204 No Content or 400 (blocked by rules)', function () {",
                  "  pm.expect([204,400]).to.include(pm.response.code);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
